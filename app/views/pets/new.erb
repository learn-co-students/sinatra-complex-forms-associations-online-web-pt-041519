<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br>

  <input id='pet_name' type="text" name="pet[name]">
  <br>

  <label>Choose an existing owner:</label>

  <br>

  <%@owners.each do |owner|%>
   
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%><br>

  <%end%>

  <br>

  <label>and/or, create a new owner:</label>

  <br>
    <h3>New owner</h3>
  <label>name:</label>
    <input  type="text" name="owner[name]" id='owner_name'>

  <br>


  <input type="submit" value="Create Pet">
</form>
